---
const {comp, phone, nombreProyecto, descripcion, tecnologias, liveDemo, repositorio} = Astro.props
---

<div class="flex items-center justify-center md:mt-10 md:mr-20 md:ml-20 md:mb-10 md:p-2">
    <div class="flex flex-col items-center justify-center md:w-10/12 md:h-1/2">
        <h1 class="text-3xl font-inter font-bold m-3">{nombreProyecto}</h1>
        
        <div class="flex items-center">
            <div class="flex border-b-2 pb-3 md:gap-52 rounded items contenedorProyecto"  style={phone? ' ':'flex-direction: row-reverse;'}>
                <div class="md:flex hidden items-center">
                    <img class="max-w-lg" src={comp} alt="imagen del proyecto en un ordenador">
                    <img class="max-h-96 max-w-56 -ml-16" style={phone? ' ':'visibility:hidden;'} src={phone} alt="imagen del proyecto en un móvil">
                </div>

                <div class="flex flex-col md:text-xl justify-between font-inter p-3">
                    <div class="flex gap-20 md:gap-10 flex-col">
                        <p>{descripcion}</p>
                        <div class="flex">
                            <p class="text-verde">Tecnologías utilizadas:&nbsp;</p>
                            <p></p>{tecnologias}</p>
                        </div>
                        <div class="flex mt-10 items-center gap-5">
                            <a href={liveDemo} target="_blank" class="bg-verde p-2 text-black font-bold hover:scale-105">Live demo ↗</a>
                            <a href={repositorio} target="_blank" class="bg-verde p-2 text-black font-bold hover:scale-105">Repositorio ↗</a>
                        </div>
                    </div>                  
                </div>
            </div>
        </div>
    </div>
</div>